---
interface Props {
  pathname: string;
  clubName: string;
  logoPath: string;
}

const { pathname, clubName, logoPath } = Astro.props;
const navItems = [
  { href: "/", label: "Home" },
  { href: "/about", label: "About" },
  { href: "/teams", label: "Teams" },
  { href: "/news", label: "News" },
  { href: "/calendar", label: "Calendar" },
  { href: "/values", label: "Values" },
  { href: "/code-of-conduct", label: "Conduct" },
  { href: "/join", label: "Join" },
  { href: "/sponsorship", label: "Sponsorship" },
  { href: "/contact", label: "Contact" }
];
---

<header class="site-header">
  <div class="container row">
    <a class="brand" href="/">
      <img src={logoPath} alt={`${clubName} logo`} width="56" height="56" />
      <span>
        <strong>{clubName}</strong>
        <small>Grassroots Football</small>
      </span>
    </a>
    <button class="menu-toggle" type="button" aria-expanded="false" aria-controls="site-nav">Menu</button>
    <nav id="site-nav" class="nav" aria-label="Primary navigation">
      {
        navItems.map((item) => (
          <a href={item.href} aria-current={pathname === item.href ? "page" : undefined}>
            {item.label}
          </a>
        ))
      }
    </nav>
  </div>
</header>

