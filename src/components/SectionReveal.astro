---
interface Props {
  title: string;
  subtitle?: string;
  className?: string;
}

const { title, subtitle, className = "" } = Astro.props;
---

<section class={`section reveal ${className}`.trim()}>
  <header class="section-head">
    <h2>{title}</h2>
    {subtitle && <p class="lead">{subtitle}</p>}
  </header>
  <slot />
</section>
