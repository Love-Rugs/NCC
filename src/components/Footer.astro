---
interface Props {
  clubName: string;
  contactEmail: string;
  instagramUrl: string;
  facebookUrl: string;
}

const { clubName, contactEmail, instagramUrl, facebookUrl } = Astro.props;
---

<footer class="site-footer">
  <div class="container footer-grid">
    <section>
      <h2>{clubName}</h2>
      <p class="muted">
        Grassroots football for North Calder families. Training updates, team info, and joining enquiries.
      </p>
      <p>
        Contact: <a href={`mailto:${contactEmail}`}>{contactEmail}</a>
      </p>
    </section>
    <section>
      <h3>Follow The Colts</h3>
      <ul class="inline-list">
        <li><a href={instagramUrl} target="_blank" rel="noreferrer">Instagram</a></li>
        <li><a href={facebookUrl} target="_blank" rel="noreferrer">Facebook</a></li>
      </ul>
    </section>
  </div>
</footer>
